<UserControl x:Class="QuizletWidget.Views.Main.Components.SetItemComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizletWidget.Views.Main.Components"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="150" Height="36">

    <DockPanel LastChildFill="True" Background="White">
        <Label Content="{Binding Caption, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Padding="0" Margin="4,5,0,0" FontSize="20"/>
        <CheckBox HorizontalAlignment="Right" Margin="0,6,4,0" VerticalAlignment="Top" Style="{StaticResource styleCustomCheckBox}" Width="24" Height="24">
        </CheckBox>
    </DockPanel>
</UserControl>
